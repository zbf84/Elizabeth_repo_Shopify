{% case media.media_type %}
    {% when 'image' %}
        <div>
            <img  src="{{ media | image_url: height: 400, width: 500  }}" alt="{{ media.preview_image.alt }}" class="w-full h-full object-cover" height= 400, width=500>
        </div>
        
    
    {% when 'external_video' %}
        {{ media | external_video_tag: class: 'w-full h-80 object-cover' }}

    {% when 'video' %}
        {{ media | video_tag: controls: true, class: 'w-full h-full object-cover' }}

    {% when 'model' %}
        {{ media | model_viewer_tag }}

    {% else %}
        {{ media | media_tag }}
    
    {% else %}
        
{% endcase %}
